<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/chats"
    android:layout_marginTop="2dp"
    android:elevation="10dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoChat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"

        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/textViewChatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorCampaign"
                android:text="Texto"
                android:paddingTop="20dp"
                android:textSize="@dimen/text_large"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </TextView>

            <TextView
                android:id="@+id/textViewTimeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:shadowColor="@color/colorAccent"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                android:text="09:10"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/textViewLastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="Usuario: Mensagem Mensagem Mensagem Mensagem Mensagem MensagemMensagem  Mensagem Mensagemv"
            android:textSize="@dimen/text_medium"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            >

        </TextView>
    </LinearLayout>


</LinearLayout>